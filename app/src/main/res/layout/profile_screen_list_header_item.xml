<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="@dimen/margin_16">

    <ImageView
        android:id="@+id/profile_screen_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/profile_screen_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription"
        tools:src="@drawable/bear" />

    <com.example.adaanahmed.westerosatwar.UIWidget.ProximaTextView
        android:id="@+id/profile_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_screen_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/white_87"
        android:textSize="24sp"
        app:proxima_font="proxima_bold"
        tools:text="Adnaan Zohran Ahmed" />

    <com.example.adaanahmed.westerosatwar.UIWidget.ProximaTextView
        android:id="@+id/profile_screen_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_screen_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textColor="@color/white_87"
        android:textSize="14sp"
        app:proxima_font="proxima_regular"
        tools:text="Rating: 42432" />

    <com.example.adaanahmed.westerosatwar.UIWidget.ProximaTextView
        android:id="@+id/profile_screen_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profile_screen_subtitle"
        android:layout_marginTop="8dp"
        android:textColor="@color/white_54"
        android:textSize="16sp"
        app:proxima_font="proxima_regular"
        tools:text="Strength: 1323" />

    <com.example.adaanahmed.westerosatwar.UIWidget.ProximaTextView
        android:id="@+id/profile_screen_strength_battle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/profile_screen_strength"
        android:textColor="@color/white_54"
        android:textSize="16sp"
        app:proxima_font="proxima_regular"
        tools:text="Battle Strength: Ambush" />


</RelativeLayout>